<h1>Encuestas</h1>
<%= link_to "Nueva Encuesta", new_book_path %>
<table border="1">
  <thead>
    <tr>
      <th>Título</th>
      <th>Tipo</th>
      <th>Tema</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.titulo %></td>
        <td><%= survey.tipo %></td>
        <td><%= survey.tema %></td>
        <td>
          <%= link_to "Mostrar", survey %>
          <%= link_to "Editar", edit_survey_path(survey) %>
          <%= link_to "Eliminar", survey, method: :delete, data: { confirm: "¿Estás seguro de eliminar esta encuesta?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>